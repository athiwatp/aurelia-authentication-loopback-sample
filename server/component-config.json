{
  "loopback-component-explorer": {
    "mountPath": "/explorer"
  },
  "loopback-component-satellizer": {
	  "facebook": {
	    "model": "user",
	    "version": "v2.5",
	    "fields": ["email","name","last_name","first_name","gender","birthday"],
	    "uri": "/facebook",
	    "mapping": {
	      "id": "facebook",
	      "email": "email",
	      "first_name": "firstName",
	      "last_name": "lastName",
	      "name": "displayName",
	      "gender": "gender",
	      "birthday":"birthday"
	    },
	    "credentials": {
	      "private": "Your app secret: set in same place in component-config.[local/production].json"
	    }
	  },
    "google": {
      "model": "user",
      "credentials": {
        "private": "the client sercet: set in same place in component-config.[local/production].json"
      },
      "uri": "/google",
      "mapping": {
        "sub": "google",
        "email": "email",
        "given_name": "firstName",
        "family_name": "lastName",
        "name": "displayName",
        "gender": "gender"
      }
    }
  }
}
